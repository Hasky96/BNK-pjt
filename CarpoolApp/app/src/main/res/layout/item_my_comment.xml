                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/myCommentContent"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:layout_width="300dp"
